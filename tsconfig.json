{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "*": ["node_modules/*", "src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "webpack.config.js", "knexfile.ts"]
}
